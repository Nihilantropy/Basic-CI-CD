global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 10s

# Rule files
rule_files:
  # - "first_rules.yml"

# Scrape configurations
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'jenkins'
    metrics_path: '/prometheus/'
    basic_auth:
      username: "JENKINS_USER_PLACEHOLDER"
      password: "JENKINS_PASS_PLACEHOLDER"
    static_configs:
      - targets: ['jenkins:8080']